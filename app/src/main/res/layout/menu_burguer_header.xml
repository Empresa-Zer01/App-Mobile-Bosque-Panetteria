<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimary"
            android:padding="20dp"
            android:theme="@style/ThemeOverlay.Material3">

            <ImageView
                android:id="@+id/menu_burguer_ftusu"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/rectangle_5_shape" />

            <TextView
                android:id="@+id/menu_burguer_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menu_burguer_ftusu"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/leaguespartanmedium"
                android:text="Rodrigo Dias"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/menu_burguer_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menu_burguer_usuario"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/leaguespartanregular"
                android:text="rodrigodias21@gmail.com"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

</RelativeLayout>